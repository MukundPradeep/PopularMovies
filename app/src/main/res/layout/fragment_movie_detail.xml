<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.beatmymovies.MovieDetail" android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/holo_green_light"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:id="@+id/detail_activity_title"
                android:gravity="center"
                android:textSize="@dimen/abc_text_size_headline_material"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:id="@+id/detail_activity_image"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:adjustViewBounds="true"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/detail_activity_image"
                    android:id="@+id/detail_activity_release_date"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/detail_activity_image"
                    android:layout_below="@id/detail_activity_release_date"
                    android:id="@+id/detail_activity_votes"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/detail_activity_image"
                    android:layout_below="@id/detail_activity_votes"
                    android:onClick="addToFavourites"
                    android:text="Favourite this"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/detail_activity_overview"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Trailors"
                android:background="@android:color/holo_green_light"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/trailor_list_view"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Reviews"
                android:background="@android:color/holo_green_light"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/review_list_view"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

